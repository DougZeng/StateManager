        <activity android:name="com.alipictures.movie.demo.StateManagerDemoActivity" />

        <activity android:name="com.alipictures.movie.demo.RecyclerViewActivity" />

        <activity android:name="com.alipictures.movie.demo.StateLayoutActivity" />

